<script type="text/javascript" language="javascript">
$(document).ready(function() {

      $("#bodypart").change(function(event){
		      $.ajax({
				   type	: 'GET',
			      url	: '/get-exercises-by-bodypart/',
			      data  : {'body_part_id':$('#bodypart').val() },
			      
			      success: function(response){
				      console.log(response.exercise_list);
				      $('#exercise').html('');
				      $.each(response.exercise_list, function(index, item) {
				      		$('#exercise').append('<option value="' +item.exercise_id + '">'+item.exercise_name+'</option>');
								console.log(index +' -- ' +item.exercise_id + '--' + item.exercise_name);
						});
				   
					},
					
				});
		 });
});
   
</script>

<script type="text/javascript" >
var exercise_id_array =[];
$(document).ready(function(){

	$("#btnAddExercise").click(function()  {

						console.log($('#exercise').val());
		   $.ajax({
				   type	: 'GET',
			      url	: '/add-exercise-in-workout/',
			      data  : {'workout_id':{{ workout_id }},'exercise_id':$('#exercise').val() },
			      success: function(response){
							$("#exercise_table").append(
											"<tr>"+
											'<td class="text-left">'+ response.exercise.exercise_name + "</td>"+
											'<td class="text-center">'+ response.exercise.exercise_category.exercise_category_name +"</td>"+
											'<td class="text-center">'+ response.exercise.exercise_gender +"</td>"+
											'<td class="text-center">'+ response.exercise.body_part_id.exercise_body_part_name +"</td>"
													
										);				    
					},
				});
		});
	});
</script>

