											);				     */
						$("#exercise_table").append(
							"<tr>"+
							'<td class="text-left">'+$("#exercise option:selected").text()+ "</td>"+
							
							//'<td class="text-center">'+$('#exercise').val()+ "</td>"+
							'<td class="text-center">'+ $('#exercise_category option:selected').text() +"</td>"+
							'<td class="text-center">'+ $('#exercise_gender').val()+"</td>"+
							'<td class="text-center">'+ $('#bodypart option:selected').text()+"</td>"+
							'<td> <a class="delete table-link danger" id="'+ response.exercise +'" style="cursor: pointer;" ><span class="fa-stack"><i class="fa fa-square fa-stack-2x"></i>' +
							'<i class="fa fa-trash-o fa-stack-1x fa-inverse"></i> </span></a> </td></tr>'
						);
